<config>
    <modules>
        <Celebros_Celexport>
            <version>1.0.8</version>
            <build>142</build>
        </Celebros_Celexport>
    </modules>
    <frontend>
        <routers>
            <celexport>
                <use>standard</use>
                <args>
                    <module>Celebros_Celexport</module>
                    <frontName>celexport</frontName>
                </args>
            </celexport>
        </routers>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Celebros_Celexport before="Mage_Adminhtml">Celebros_Celexport_Adminhtml</Celebros_Celexport>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <celexport>
                    <file>celebros/celexport.xml</file>
                </celexport>
            </updates>
        </layout>
        <translate>
            <modules>
                <Celebros_Celexport>
                    <files>
                        <default>Celebros_Celexport.csv</default>
                    </files>
                </Celebros_Celexport>
            </modules>
        </translate>
        <events>
            <clean_catalog_images_cache_after>
                <observers>
                    <schedule_new_export_clean_catalog_images_cache_after>
                        <class>celexport/exporter</class>
                        <method>scheduleNewExport</method>
                    </schedule_new_export_clean_catalog_images_cache_after>
                </observers>
            </clean_catalog_images_cache_after>
        </events>
    </adminhtml>
    <global>
        <models>
            <celexport>
                <class>Celebros_Celexport_Model</class>
                <resourceModel>celexport_mysql4</resourceModel>
            </celexport>
            <celexport_mysql4>
                <class>Celebros_Celexport_Model_Mysql4</class>
                <entities>
                    <cache>
                        <table>celebros_cache</table>
                    </cache>
                    <mapping>
                        <table>celebros_mapping</table>
                    </mapping>
                    <cronlog>
                        <table>celebros_cronlog</table>
                    </cronlog>
                </entities>
            </celexport_mysql4>
        </models>
        <resources>
            <celexport_setup>
                <setup>
                    <module>Celebros_Celexport</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </celexport_setup>
            <celexport_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </celexport_write>
            <celexport_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </celexport_read>
        </resources>
        <blocks>
            <celexport>
                <class>Celebros_Celexport_Block</class>
            </celexport>
        </blocks>
        <helpers>
            <celexport>
                <class>Celebros_Celexport_Helper</class>
            </celexport>
        </helpers>
        <events>
            <controller_front_init_before>
                <observers>
                    <celebros_celexport_rewrite_menu>
                        <type>model</type>
                        <class>Celebros_Celexport_Model_Observer</class>
                        <method>rewriteMenuBlock</method>
                    </celebros_celexport_rewrite_menu>
                </observers>
            </controller_front_init_before>
        </events>
    </global>
    <default>
        <celexport>
            <export_settings>
                <export_enabled>0</export_enabled>
                <export_data_history>0</export_data_history>
                <zipname>products.zip</zipname>
                <datahistoryname>Data_History.zip</datahistoryname>
                <delimiter>\t</delimiter>
                <enclosed_values>^</enclosed_values>
                <type>file</type>
                <export_lifetime>10</export_lifetime>
                <path>/var/celebros/export</path>
                <global_export>0</global_export>
                <extra_tables></extra_tables>
                <rootcat_products_export>0</rootcat_products_export>
                <currency>base_without</currency>
                <passive>1</passive>
                <ssl>0</ssl>
                <ftp_protocol>ftp</ftp_protocol>
            </export_settings>
            <advanced>
                <single_process>0</single_process>
                <export_chunk_size>1000</export_chunk_size>
                <export_process_limit>3</export_process_limit>
                <memory_limit>1024</memory_limit>
                <enable_log>1</enable_log>
                <cronlog_lifetime>168</cronlog_lifetime>
                <images_refresh_export>0</images_refresh_export>
            </advanced>
        </celexport>
    </default>
    <crontab>
        <events>
            <default>
                <observers>
                    <celebros_cron_observer>
                        <class>celexport/observer</class>
                        <method>test</method>
                    </celebros_cron_observer>
                </observers>
            </default>
            <always>
                <observers>
                    <celebros_cron_observer>
                        <class>celexport/observer</class>
                        <method>test</method>
                    </celebros_cron_observer>
                </observers>
            </always>
        </events>
        <jobs>
            <celexport_export>
                <schedule>
                    <config_path>celexport/export_settings/cron_expr</config_path>
                </schedule>
                <run>
                    <model>celexport/exporter::catalogUpdate</model>
                </run>
            </celexport_export>
        </jobs>
    </crontab>
</config>